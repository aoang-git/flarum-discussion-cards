{
    "name": "aoang-git/flarum-discussion-cards",
    "description": "增强版讨论卡片扩展 - 基于 walsgit/flarum-discussion-cards，添加图片优化、标签色条、内容高亮等功能",
    "type": "flarum-extension",
    "keywords": ["flarum", "extension", "discussion", "cards", "enhanced", "中文"],
    "license": "MIT",
    "authors": [
        {
            "name": "aoangen",
            "email": "aoangen@qq.com",
            "homepage": "https://github.com/aoang-git"
        },
        {
            "name": "Wa!id (原作者)",
            "homepage": "https://discuss.flarum.org/u/Walid"
        }
    ],
    "require": {
        "flarum/core": "^1.0",
        "flarum/tags": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Walsgit\\Discussion\\Cards\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Flarum Discussion Cards (Enhanced)",
            "category": "feature",
            "icon": {
                "name": "fas fa-border-all",
                "backgroundColor": "#008e97",
                "color": "#fff"
            }
        }
    },
    "support": {
        "issues": "https://github.com/aoang-git/flarum-discussion-cards/issues",
        "source": "https://github.com/aoang-git/flarum-discussion-cards"
    }
}
